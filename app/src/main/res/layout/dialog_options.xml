<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="36dp"
    android:layout_marginStart="36dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/dialog_cloud_drive_options_corner_radius"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="31dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@string/font_family_regular"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/dialog_cloud_drive_options_title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/gray">
            </View>

            <TextView
                android:id="@+id/textview_full_mode_image"
                style="@style/TextViewItemOptions"
                android:drawableStart="@drawable/ic_full_mode_image"
                android:text="@string/dialog_cloud_drive_options_full_mode_image"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/gray">
            </View>

            <TextView
                android:id="@+id/textview_save_image"
                style="@style/TextViewItemOptions"
                android:drawableStart="@drawable/ic_save_image"
                android:text="@string/dialog_cloud_drive_options_save_image"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/gray">
            </View>

            <TextView
                android:id="@+id/textview_delete_image"
                style="@style/TextViewItemOptions"
                android:drawableStart="@drawable/ic_delete_image"
                android:text="@string/dialog_cloud_drive_options_delete_image"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_cloud_drive_options_margin"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/dialog_cloud_drive_options_corner_radius"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3.5sp"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

    </android.support.v7.widget.CardView>
</LinearLayout>