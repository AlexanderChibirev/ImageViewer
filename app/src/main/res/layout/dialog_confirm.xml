<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/dialog_confirm_padding">

    <TextView
        android:id="@+id/textview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_confirm_margin"
        android:gravity="center"
        android:textColor="@color/brownish_grey"
        android:textSize="16sp"
        tools:text="Start browser to authorize?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_confirm_margin_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:theme="@style/OrangeButtonTheme"
            tools:text="@string/exit"/>

        <View
            android:layout_width="4dp"
            android:layout_height="0dp">
        </View>

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:theme="@style/GreenButtonTheme"
            tools:text="@string/yes"/>

    </LinearLayout>

</LinearLayout>