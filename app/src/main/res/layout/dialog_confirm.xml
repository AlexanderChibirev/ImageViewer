<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:clipToPadding="false"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dialog_attention_padding"
        android:paddingLeft="@dimen/dialog_attention_padding"
        android:paddingRight="@dimen/dialog_attention_padding"
        android:paddingTop="@dimen/dialog_attention_padding">


        <TextView
            android:id="@+id/textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="@color/brownish_grey"
            android:textSize="16sp"
            tools:text="Start browser to authorize?"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:theme="@style/OrangeButtonTheme"
                tools:text="@string/exit"/>

            <Button
                android:id="@+id/button_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:theme="@style/GreenButtonTheme"
                tools:text="@string/yes"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>