<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/tomato</item>
        <item name="colorControlActivated">@color/tomato</item>
    </style>

    <style name="OrangeButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GreenButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/greenish_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">@dimen/menu_item_padding_start</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stateListAnimator">@animator/menu_item</item>
        <item name="android:background">@drawable/bg_menu_item</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
